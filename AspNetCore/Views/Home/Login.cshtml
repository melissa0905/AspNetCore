@model UserLoginModel

<form asp-action="Login" method="post" class="p-4 w-50 mx-auto shadow" >
    <div class="form-group">
        <label>Kullanıcı Adı: </label>
        <span asp-validation-for="@Model.KullaniciAdi" class="text-danger"></span>
        <input type="text" asp-for="@Model.KullaniciAdi" class="form-control" />
    </div>
    <div class="form-group">
        <label>Şifre: </label>
        <span asp-validation-for="@Model.Sifre" class="text-danger"></span>
        <input type="text" asp-for="@Model.Sifre" class="form-control" />
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="@Model.BeniHatirla" class="form-check" />
        <label asp-for="BeniHatirla" class="form-check-label">Beni Hatırla </label>
    </div>
    <div asp-validation-summary="ModelOnly" class="text-danger">

    </div>
    <div class="form-group">
        <button type="submit" class="btn btn-block btn-info" >Giris Yap</button>
    </div>
</form>
@section JavaScript{ 
    <script src="~/jqueryValid/jquery.validate.min.js"></script>
    <script src="~/jqueryUnob/jquery.validate.unobtrusive.min.js"></script>
}